<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<GeneDef>
		<defName>VRESaurids_ScaleSkin</defName>
		<label>scaleskin</label>
		<labelShortAdj>scaleskinned</labelShortAdj>
		<description>Carriers of this gene grow scales all over their body, which protect them from sharp damage of any kind.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<displayCategory>Miscellaneous</displayCategory>
		<displayOrderInCategory>400</displayOrderInCategory>
		<iconPath>UI/GeneIcons/Gene_ScaleSkin</iconPath>
		<iconColor>(0.75, 0.75, 0.75)</iconColor>
		<forcedHeadTypes>
			<li>VRESaurids_ScaleSkin_Average</li>
			<li>VRESaurids_ScaleSkin_Narrow</li>
			<li>VRESaurids_ScaleSkin_Heavy</li>
			<li>VRESaurids_ScaleSkin_Gaunt</li>
		</forcedHeadTypes>
		<exclusionTags>
			<li>Skin</li>
			<li>Fur</li>
		</exclusionTags>
		<fur>VRESaurids_ScaleSkin</fur>
		<skinIsHairColor>false</skinIsHairColor>
		<tattoosVisible>true</tattoosVisible>
		
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_Fur</nodeClass>
				<workerClass>PawnRenderNodeWorker_Fur</workerClass>
				<baseLayer>5</baseLayer>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<colorType>Skin</colorType>
				<parentTagDef>Body</parentTagDef>
			</li>
		</renderNodeProperties>
		<statOffsets>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
		</statOffsets>
		<missingGeneRomanceChanceFactor>0.2</missingGeneRomanceChanceFactor>
		
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<useSkinColorForFur>True</useSkinColorForFur>
			</li>
		</modExtensions>
	</GeneDef>

</Defs>